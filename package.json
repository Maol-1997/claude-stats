{
  "name": "claude-stats",
  "author": "Maol-1997",
  "repository": {
    "type": "git",
    "url": "https://github.com/Maol-1997/claude-stats"
  },
  "displayName": "Claude Stats",
  "description": "Monitor your Claude Code usage and rate limits",
  "version": "1.0.0",
  "publisher": "MartinOrtiz",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization"
  ],
  "icon": "resources/claude-color.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "claude-icon": {
        "description": "Claude Icon",
        "default": {
          "fontPath": "resources/claude.woff",
          "fontCharacter": "\\e900"
        }
      }
    },
    "commands": [
      {
        "command": "claude-stats.refresh",
        "title": "Refresh Claude Stats"
      },
      {
        "command": "claude-stats.login",
        "title": "Login to Claude Code"
      }
    ],
    "configuration": {
      "title": "Claude Stats",
      "properties": {
        "claudeStats.updateInterval": {
          "type": "number",
          "default": 300,
          "description": "Update interval in seconds (default: 300 = 5 minutes)"
        },
        "claudeStats.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notifications when usage is high"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:publish": "vsce publish",
    "compile": "tsc -p ./",
    "vscode:package": "vsce package",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "vsce": "^2.15.0"
  }
}
